<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Produtos</title>
    <link rel="stylesheet" href="/home.css">
</head>
<body>
    <!-- Barra de navegação com o botão de logout -->
    <header>
        <nav>
            <% if (user) { %>
                <a href="/carrinho" class="cart-button">Carrinho</a> <!-- Somente aparece se o usuário estiver logado -->
                <a href="/auth/logout" class="logout-button">Logout</a>
            <% } else { %>
                <a href="/auth/login" class="login-button">Login</a> <!-- Se não estiver logado -->
            <% } %>
        </nav>
    </header>

    <!-- Seção de produtos -->
    <main>
        <h1>Produtos</h1>
        <div class="produtos-container">
            <% produtos.forEach(produto => { %>
                <div class="produto-card">
                    <h2><%= produto.nome %></h2>
                    <p><%= produto.descricao %></p>
                    <p>Preço: R$ <%= produto.valorVenda %></p>
                    <form action="/adicionar-carrinho" method="POST">
                        <input type="hidden" name="idProduto" value="<%= produto.idProduto %>">
                        <button type="submit" class="add-to-cart">Adicionar ao Carrinho</button>
                    </form>
                </div>
            <% }) %>
        </div>
    </main>
</body>
</html>
