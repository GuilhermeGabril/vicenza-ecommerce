<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <title>Formas de Pagamento</title>
    <link rel="stylesheet" href="/pagamento.css">
</head>
<body>
    <h1>Formas de Pagamento</h1>

    <!-- Exibe os itens do carrinho sem opção de edição -->
    <div class="carrinho">
        <% carrinho.forEach(item => { %>
            <div class="produto">
                <h2><%= item.nome %></h2>
                <p><%= item.descricao %></p>
                <p>Preço: R$ <%= item.preco.toFixed(2) %></p>
                <p>Quantidade: <%= item.quantidadeSelecionada || 1 %></p>
            </div>
        <% }); %>
    </div>

    <!-- Exibe o valor total -->
    <h3>Valor Total: R$ <%= valorTotal.toFixed(2) %></h3>

    <!-- Opções de pagamento -->
    <form action="/confirmar-compra" method="post">
        <div>
            <label>
                <input type="radio" name="formaPagamento" value="pix" required>
                PIX
            </label>
            <div id="pix-container" style="display: none;">
                <p><strong>Código PIX:</strong> <%= codigoPix %></p>
            </div>
        </div>

        <div>
            <label>
                <input type="radio" name="formaPagamento" value="cartao" required>
                Cartão de Crédito
            </label>
            <div id="cartao-container" style="display: none;">
                <label for="parcelas">Escolha o número de parcelas:</label>
                <select name="parcelas">
                    <% for (let i = 1; i <= 12; i++) { %>
                        <option value="<%= i %>"><%= i %>x de R$ <%= (valorTotal / i).toFixed(2) %></option>
                    <% } %>
                </select>
            </div>
        </div>

        <!-- Botão para confirmar compra -->
        <button type="submit">Confirmar Compra</button>
    </form>

    <script>
        // Script para exibir as opções de PIX e Cartão com base na seleção
        document.querySelectorAll('input[name="formaPagamento"]').forEach(input => {
            input.addEventListener('change', function() {
                document.getElementById('pix-container').style.display = (this.value === 'pix') ? 'block' : 'none';
                document.getElementById('cartao-container').style.display = (this.value === 'cartao') ? 'block' : 'none';
            });
        });
    </script>
</body>
</html>
